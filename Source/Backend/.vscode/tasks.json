{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Full Docker Image",
            "type": "shell",
            "command": "sudo docker build -t coretor-ortografic-furlan-full -f Dockerfile.full .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build Code-Only Docker Image",
            "type": "shell",
            "command": "sudo docker build -t coretor-ortografic-furlan-code -f Dockerfile.code .",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Docker Container",
            "type": "shell",
            "command": "sudo docker run -p 8080:80 coretor-ortografic-furlan-code",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "Build Code-Only Docker Image"
        },
        {
            "label": "Stop Docker Container",
            "type": "shell",
            "command": "sudo docker stop $(sudo docker ps -q --filter ancestor=coretor-ortografic-furlan-code)",
            "problemMatcher": []
        }
    ]
}